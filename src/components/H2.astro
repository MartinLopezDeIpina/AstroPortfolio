    preserveAspectRatio="xMidYMid meet">
    <g transform="translate(0.000000,15.000000) scale(0.100000,-0.100000)"
    fill="#303030" stroke="none">
    <path d="M69 81 c-38 -37 -69 -71 -69 -75 0 -3 508 -6 1128 -6 l1128 0 51 38
