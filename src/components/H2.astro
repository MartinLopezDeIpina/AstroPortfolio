    .divTerminal{
        background-image: url("/svg/flecha2.svg");
        box-shadow: inset 0px 0px 0px 2px #71d7c7;
        background-size: 540px;
        padding-left: 50px;
        margin-bottom: 50px;

        background-repeat: no-repeat;
        display: flex;
        align-items: center;

        width: fit-content;

    }
    .divTerminal h2{
        margin-top:-5px;
        padding-right: 45px;
        margin-left:-5px;
    }
    h2{
        margin:0px;
