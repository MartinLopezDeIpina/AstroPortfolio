---
import Tecnologia from "../Tecnologias/Tecnologia.astro";

let tecnologias = Astro.props.tecnologias;
let urlVideo = Astro.props.urlVideo;

let clase = Astro.props.class;
---

<div class=`divVideo ${clase}`>
    <video src={urlVideo} autoplay loop onclick="if (this.paused) { this.play(); this.classList.remove('paused'); } else { this.pause(); this.classList.add('paused'); }"></video>
    <div class="divTecnologias">
        {tecnologias.map(tec =>{
            return <Tecnologia nombre={tec}/>
        })}
    </div>
</div>

<style>
    .divVideo{
        display: flex;
        align-items: center;
        flex-direction: column;
        gap: 25px;

        width: 60%;
    }
    .divVideo video{
        object-fit: contain;
        width:700px;
        height: auto;
        border-radius: 10px;
    }

    video:hover{
        cursor: pointer;
    }
    .paused{
        filter: blur(3px);
        border: 3px solid red;
        margin: -3px;
    }

    .divTecnologias{
        display: flex;
        justify-content: center;
        gap:25px;
    }
</style>