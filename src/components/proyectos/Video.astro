---
import Tecnologia from "../Tecnologias/Tecnologia.astro";

let tecnologias = Astro.props.tecnologias;
let urlVideo = Astro.props.urlVideo;

let clase = Astro.props.class;
---

<div class=`divVideo ${clase}`>
    <video id="videoPlayer" src={urlVideo} autoplay loop onclick="if (this.paused) { this.play(); this.classList.remove('paused'); } else { this.pause(); this.classList.add('paused'); }"></video>
    <div class="divControles">
        <svg class="svgPlay botonPausa" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path class="svgPause" d="M8 5V19M16 5V19" stroke-linejoin="round"/>
        </svg>
            <div class="progress">
                <div id="progressValue" class="progress-value"></div>
            </div>
    </div>
    <div class="divTecnologias">
        {tecnologias.map(tec =>{
            return <Tecnologia nombre={tec}/>
        })}
    </div>
</div>


<style>
    .divVideo{
        display: flex;
        align-items: center;
        flex-direction: column;
        gap: 25px;

        width: 60%;
    }
    .divVideo video{
        object-fit: contain;
        width:100%;
        height: auto;
        border-radius: 10px;
    }

    video:hover{
        cursor: pointer;
    }
    .paused{
        filter: blur(3px);
        border: 3px solid red;
        margin: -3px;
    }

    .divTecnologias{
        display: flex;
        justify-content: center;
        gap:25px;
    }

    .divControles{
        width: 100%;
        display:flex;
        justify-content: center;
        align-items: center;
        gap: 25px;
        margin-top: -10px;
    }

    .botonPausa{
        width: 50px;
        height: 50px;
        border-radius: 5px;
        border: none;
        cursor: pointer;
    }

    .progress {
        background: var(--color-surface-200);
        justify-content: flex-start;
        border-radius: 100px;
        align-items: center;
        position: relative;
        padding: 0 5px;
        display: flex;
        height: 20px;
        width:90%;
    }

    .progress-value {
        animation: load 3s normal forwards;
        box-shadow: 0 10px 40px -10px var(--color-on-surface);
        border-radius: 100px;
        background: var(--color-surface-mixed-600);
        height: 13px;
        width: 0;
    }
    .progress:hover{
        cursor: pointer;
        opacity: 0.75;

    }

    .svgPlay{
        fill: var(--color-surface-200);
        stroke: var(--color-primary-100);
        stroke-width: 1.5;
    }
    .svgPlay:hover{
        opacity: 0.75;
        transition: all 0.1s ease;
    }

    .svgPause{
        stroke-width: 3;
    }


    @media screen and (max-width: 1300px) {
        .divVideo{
            width: 100%;
        }
        .divTecnologias{
            flex-wrap: wrap;
        }
    }
</style>